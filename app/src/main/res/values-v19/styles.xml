<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- ボタンのスタイル -->
    <style name="button_start">     スタートボタン
        <item name="android:textColor">@color/P1StartButtonTextColor</item>
        <item name="android:background">@drawable/start_button_back_color</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="button_answer">    アンサーボタン
        <item name="android:textColor">@color/AnswerButtonTextColor</item>
        <item name="android:background">@drawable/answer_button_back_color</item>
    </style>

    <style name="answer_stroke">    アンサーボタン外枠
        <item name="android:background">@drawable/answer_button_stroke</item>
    </style>

    <style name="title_activity">    アクティビティタイトル
        <item name="android:textColor">@color/P1ScoreTextColor</item>
        <item name="android:background">@drawable/answer_button_back_color</item>
        <item name="android:textSize">25sp</item>
    </style>

    <!-- テキストのスタイル -->
    <style name="fontSize_Big">         テキストサイズ大
        <item name="android:textColor">@color/P1ScoreTextColor</item>
        <item name="android:textSize">35sp</item>
    </style>

    <style name="fontSize_Normal">      テキストサイズ中
        <item name="android:textColor">@color/P1ScoreTextColor</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="fontSize_Midium">       テキストサイズ小
        <item name="android:textColor">@color/P1ScoreTextColor</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="fontSize_Small">       テキストサイズ小
        <item name="android:textColor">@color/P1ScoreTextColor</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="fontStyle_Question">   クエスチョンテキスト
        <item name="android:textColor">@color/QuestionTextColor</item>
        <item name="android:textSize">35sp</item>
    </style>

    <!-- 丸角背景のスタイル -->
    <style name="carrot_back">      ニンジン色バックグラウンド
        <item name="android:background">@drawable/color_carrot_background</item>
    </style>

    <style name="yellow_back">      黄色バックグラウンド
        <item name="android:background">@drawable/color_yellow_background</item>
    </style>

    <style name="Linearr">          灰色バックグラウンド
        <item name="android:background">@drawable/linearr</item>
    </style>

    <!-- CardViewのスタイル -->
    <style name="CardViewStyle" parent="CardView">          CardView黄色背景
        <item name="cardBackgroundColor">@color/P2AnswerButtonBackColor</item>
    </style>

    <style name="CardViewConglaStyle" parent="CardView">    CardView水色背景
        <item name="cardBackgroundColor">@color/P5ConglacheColor</item>
    </style>
</resources>
