<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/frameL1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:text="New Text"
                android:id="@+id/textView"
                android:background="@color/P2AnswerButtonBackColor"
                android:textSize="20sp"
                android:gravity="center" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/qaSoundBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/fab_margin"
                android:layout_marginRight="@dimen/fab_margin"
                app:backgroundTint="@color/P1SoundButtonBackColor"
                android:src="@drawable/volume_on" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/FrameL2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/frameL1"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView"
                android:background="@color/P1StartButtonBackColor" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="New Text"
                android:id="@+id/textView2"
                android:gravity="center"
                android:layout_alignWithParentIfMissing="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentTop="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentBottom="false"
                android:textSize="30sp" />
        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/FrameL3"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/FrameL2"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/P1StartButtonBackColor">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#808080"
                android:layout_margin="10dp"></LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/FrameL4"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/FrameL3"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="New Button"
                android:id="@+id/qaBtnAnswer1"
                android:padding="1dp"
                android:layout_gravity="top"
                android:layout_weight="1"
                style="@style/button_answer"
                android:layout_marginRight="2dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="New Button"
                android:id="@+id/qaBtnAnswer2"
                android:padding="1dp"
                android:layout_weight="1"
                style="@style/button_answer"
                android:layout_marginLeft="2dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/qaImgStroke1"
                style="@style/answer_stroke"
                android:layout_weight="1"
                android:layout_marginRight="2dp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/qaImgStroke2"
                style="@style/answer_stroke"
                android:layout_weight="1"
                android:layout_marginLeft="2dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="5dp"
        android:layout_below="@+id/FrameL4"
        android:layout_alignParentBottom="false">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="New Button"
                android:id="@+id/qaBtnAnswer3"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                style="@style/button_answer"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="New Button"
                android:id="@+id/qaBtnAnswer4"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                style="@style/button_answer"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/qaImgStroke3"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                style="@style/answer_stroke"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/qaImgStroke4"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                style="@style/answer_stroke"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></LinearLayout>
    </FrameLayout>

</RelativeLayout>