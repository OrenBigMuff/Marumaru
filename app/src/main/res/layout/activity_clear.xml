<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.bizan.mobile10.marumaru.Clear">



    <include layout="@layout/clear_layout"/>

    <RelativeLayout android:layout_width="match_parent"
                  android:layout_height="match_parent" android:gravity="right"
                  android:orientation="vertical">
        <Button
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/btnmavol_cl"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/marumaru_sound_on" android:alpha="0.8"
            android:layout_marginTop="7dp" android:layout_marginRight="12dp"/>
        <Button
            android:layout_width="240dp"
            android:layout_height="75dp"
            android:text="app Init"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="false"
            android:id="@+id/btnInit" android:layout_gravity="bottom" android:alpha="0.8"
            style="@style/button_start"
            android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
