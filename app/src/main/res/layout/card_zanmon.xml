<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="1">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        style="@style/CardViewStyle"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:clickable="false"
        android:elevation="2dp" android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="4dp">

        <!-- カードに載せる情報 -->

        <RelativeLayout
            android:id="@+id/cardRelative"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:elevation="2dp" android:gravity="center_horizontal">

            <TextView
                android:id="@+id/zanmonTitle"
                style="@style/fontSize_Normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="10dp"
                android:text="Title" android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge" android:textSize="18dp"/>

            <TextView
                android:id="@+id/zanmonWord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/zanmonTitle"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="5dp"
                android:text="Not Remember"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge" android:textColor="#002bff"
                android:textSize="35sp"/>

            <TextView
                android:id="@+id/zanmonMean"
                style="@style/fontSize_Normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/zanmonWord"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:text="Meaning of Words" android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="20dp" android:textAlignment="center"
                android:layout_marginLeft="17dp" android:layout_marginRight="17dp"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>