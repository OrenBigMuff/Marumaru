<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical"
              android:weightSum="1">


    -
    <android.support.v7.widget.CardView android:id="@+id/cardView"
                                        style="@style/CardViewStyle"
                                        xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginTop="5dp"
                                        android:foreground="?android:attr/selectableItemBackground"
                                        card_view:cardCornerRadius="4dp">

        <!-- カードに載せる情報 -->


        -
        <RelativeLayout android:id="@+id/cardRelative" android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_gravity="center_horizontal"
                        android:padding="10dp">

            <TextView android:id="@+id/textBox" style="@style/fontSize_Normal"
                      android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_marginBottom="12dp" android:text="@string/commentary_text1"
                      android:textAppearance="?android:attr/textAppearanceLarge"/>

            <TextView android:id="@+id/textView3" style="@style/fontSize_Normal"
                      android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_alignLeft="@+id/textBox" android:layout_below="@+id/textBox"
                      android:layout_marginBottom="12dp" android:text="@string/commentary_text2"/>

            <Button android:id="@+id/btnMgure" style="@style/button_start"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_below="@+id/textView3" android:layout_centerHorizontal="true"
                    android:layout_marginBottom="12dp" android:text="@string/magure_button"/>

            <TextView android:id="@+id/textView5" style="@style/fontSize_Normal"
                      android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_alignLeft="@+id/textBox" android:layout_below="@+id/btnMgure"
                      android:layout_marginBottom="12dp" android:text="@string/commentary_text3"/>

            <CheckBox android:id="@+id/checkBox" style="@style/fontSize_Normal"
                      android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_alignLeft="@+id/textBox"
                      android:layout_below="@+id/textView5"
                      android:text="@string/commentary_checkbox"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>